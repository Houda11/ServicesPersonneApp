
@{
    ViewBag.Title = "Connecter";
    Layout = "~/Views/Shared/_MyLayoutSAP.cshtml";
}



<main id="tg-main" class="tg-main tg-paddingzero tg-haslayout">
    <!--************************************
            Contact Us Start
    *************************************-->

    <div class="tg-main-section tg-haslayout">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-10 col-md-push-1 col-lg-8 col-lg-push-2">
                    
                        <div class="tg-sectiontitle">
                            
                            <h2>Connectez-vous maintenant</h2>
                        </div>
                   
                </div>
                <div class="tg-contactusarea">
                    <div class="col-xs-12 col-sm-12 col-md-10 col-md-push-1 col-lg-10 col-lg-push-1">
                        <form class="tg-themeform tg-formlogin-register" action="@Url.Action("Login", "Accueils",FormMethod.Post)" method="POST">
                            <h5>@ViewBag.msg</h5>

                            <div class="col-sm-12 col-xs-12">
                                <div class="tg-form-center">

                                    <fieldset>
                                        <div class="form-group">
                                            <input type="email" name="email" class="form-control" placeholder="E-mail">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" name="password" class="form-control" placeholder="Mot de passe">
                                        </div>
                                        <div class="form-group">
                                            <button class="tg-btn tg-btn-lg" type="submit">Inscrire maintenant</button>
                                        </div>
                                        <div>
                                            <a class="tg-btnforgotpass" href="#">Mot de passe oublié?</a>
                                        </div>
                                        
                                    </fieldset>


                                </div>
                            </div>


                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--************************************
            Contact Us End
    *************************************-->
</main>