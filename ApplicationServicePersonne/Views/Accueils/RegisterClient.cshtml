@model ApplicationServicePersonne.Models.Client

@{
    /**/

    ViewBag.Title = "RegisterClient";
}


<main id="tg-main" class="tg-main tg-paddingzero tg-haslayout">
    <div class="tg-main-section tg-haslayout">
        <div class="container">
            <div class="row">
                <div id="tg-content" class="tg-content">

                    <form action="@Url.Action("RegisterClient", "Accueils")" method="POST" enctype="multipart/form-data">


                        @Html.AntiForgeryToken()

                        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-12">
                            <div class="tg-sectionhead">
                                <div class="tg-sectiontitle">
                                    <h2>Inscrivez-vous comme chercheur de service</h2>
                                </div>
                            </div>

                            <div class="tg-formlogin-register">

                                <div class="tg-form-center">

                                    <div class="form-horizontal">
                                        <h4>Client</h4>
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                        <div class="form-group">
                                            @Html.LabelFor(model => model.nom_client, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Nom")
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.nom_client, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.nom_client, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.prenom_client, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Prénom")
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.prenom_client, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.prenom_client, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.photo_client, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Photo de vous")
                                            <div class="col-md-10">
                                                <input name="PhotosClients" type="file" class="text-danger" required />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.email_client, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "E-mail")
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.email_client, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.email_client, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.sexe_client, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Sexe")
                                            <div class="col-md-10">
                                                <!-- @Html.EditorFor(model => model.sexe_client, new { htmlAttributes = new { @class = "form-control" } })-->
                                                <select class="form-control" id="Sexe" name="Sexe">
                                                    <option>Sexe</option>
                                                    <option>Homme</option>
                                                    <option>Femme</option>
                                                </select>
                                                @Html.ValidationMessageFor(model => model.sexe_client, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.mobile_client, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Mobile")
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.mobile_client, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.mobile_client, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.password_client, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Mot de passe")
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.password_client, new { htmlAttributes = new { @class = "form-control" , placeholder = "Mot de passe", @type = "password" } })
                                                @Html.ValidationMessageFor(model => model.password_client, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.password_client, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Retapez le mot de passe")
                                            <div class="col-md-6">
                                                <input name="confpass" type="password" class="form-control" placeholder="Retaper votre mot de passe" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="RegisterClient" class="btn btn-default" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </form>

                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>