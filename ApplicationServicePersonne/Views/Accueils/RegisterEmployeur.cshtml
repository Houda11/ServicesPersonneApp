@model ApplicationServicePersonne.Models.Employeur

@{
    ViewBag.Title = "RegisterEmployeur";
}


<main id="tg-main" class="tg-main tg-paddingzero tg-haslayout">
    <div class="tg-main-section tg-haslayout">
        <div class="container">
            <div class="row">
                <div id="tg-content" class="tg-content">

                    <form action="@Url.Action("RegisterEmployeur", "Accueils")" method="POST" enctype="multipart/form-data">

                        @Html.AntiForgeryToken()



                        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-12">
                            <div class="tg-sectionhead">
                                <div class="tg-sectiontitle">
                                    <h2>Inscrivez-vous comme chercheur de travail</h2>
                                </div>
                            </div>

                                <div class="tg-form-center-choix">

                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })





                                    <div class="form-group">
                                        @Html.LabelFor(model => model.nom_employeur, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Nom")
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.nom_employeur, new { htmlAttributes = new { @class = "form-control", placeholder = "Nom" } })
                                            @Html.ValidationMessageFor(model => model.nom_employeur, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.prenom_employeur, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Prénom")
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.prenom_employeur, new { htmlAttributes = new { @class = "form-control", placeholder = "Prénom" } })
                                            @Html.ValidationMessageFor(model => model.prenom_employeur, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.photo_employeur, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Photo de vous")
                                        <div class="col-md-6">
                                            <input name="Photos" type="file" class="text-danger" required />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.email_employeur, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "E-mail")
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.email_employeur, new { htmlAttributes = new { @class = "form-control", placeholder = "E-mail" } })
                                            @Html.ValidationMessageFor(model => model.email_employeur, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.sexe_employeur, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Sexe")
                                        <div class="col-md-6">
                                            <select class="form-control" id="Sexe" name="Sexe">
                                                <option>Sexe</option>
                                                <option>Homme</option>
                                                <option>Femme</option>
                                            </select>
                                            @Html.ValidationMessageFor(model => model.sexe_employeur, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.mobile_employeur, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Mobile")
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.mobile_employeur, new { htmlAttributes = new { @class = "form-control", placeholder = "Mobile" } })
                                            @Html.ValidationMessageFor(model => model.mobile_employeur, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ville, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Ville")
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.ville, new { htmlAttributes = new { @class = "form-control", placeholder = "Ville" } })
                                            @Html.ValidationMessageFor(model => model.ville, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.adresse, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Adresse")
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.adresse, new { htmlAttributes = new { @class = "form-control", placeholder = "Adresse" } })
                                            @Html.ValidationMessageFor(model => model.adresse, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.disponibilité_emp, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Disponibilité")
                                        <div class="col-md-6">
                                            <div class="checkbox">
                                                @Html.EditorFor(model => model.disponibilité_emp)
                                                @Html.ValidationMessageFor(model => model.disponibilité_emp, "", new { @class = "text-danger", placeholder = "Disponibilité" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.password_employeur, htmlAttributes: new { @class = "control-label col-md-2", }, labelText: "Mot de passe")
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.password_employeur, new { htmlAttributes = new { @class = "form-control", placeholder = "Mot de passe", @type = "password" } } )
                                            @Html.ValidationMessageFor(model => model.password_employeur, "minimum 8 caractéres", new { @class = "text-danger" })
                                           
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.password_employeur, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Retapez le mot de passe")
                                        <div class="col-md-6">
                                            <input name="confpass" type="password" class="form-control" placeholder="Retaper votre mot de passe" />
                                        </div>
                                    </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.id_service, "Catégorie de service", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-6">
                                                @Html.DropDownList("id_service", null, htmlAttributes: new { @class = "form-control", placeholder = "Catégorie de service" })
                                                @Html.ValidationMessageFor(model => model.id_service, "", new { @class = "text-danger" })
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            @Html.LabelFor(model => model.titre_serv_emp, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Titre de service")
                                            <div class="col-md-6">
                                                @Html.EditorFor(model => model.titre_serv_emp, new { htmlAttributes = new { @class = "form-control", placeholder = "Titre de service" } })
                                                @Html.ValidationMessageFor(model => model.titre_serv_emp, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.prix, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Prix de service")
                                            <div class="col-md-6">
                                                @Html.EditorFor(model => model.prix, new { htmlAttributes = new { @class = "form-control", placeholder = "Prix de service" } })
                                                @Html.ValidationMessageFor(model => model.prix, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.desc_serv_emp, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-6">
                                                @Html.EditorFor(model => model.desc_serv_emp, new { htmlAttributes = new { @class = "form-control", placeholder = "Description de service" } })
                                                @Html.ValidationMessageFor(model => model.desc_serv_emp, "", new { @class = "text-danger" })
                                            </div>
                                        </div>



                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-4">
                                                <div class="tg-form-center">
                                                    <button class="tg-btn tg-btn-lg" type="submit">Inscrire maintenant</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            

                        </div>


                    </form>

                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>